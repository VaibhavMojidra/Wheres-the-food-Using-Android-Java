<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".LoginOTP">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/bottomlogincurve"
        android:elevation="20dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/OTPTBLYT"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Enter OTP">

        </EditText>
        <Button
            android:id="@+id/VerifyBtn"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/registerbbg"
            android:textColor="#FFFFFF"
            android:text="Verify OTP">

        </Button>
        <TextView
            android:id="@+id/countdownTV"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:drawablePadding="4dp"
            android:text="Resend OTP in 120 seconds"
            android:textColor="#949494"
            android:visibility="visible"
            android:drawableLeft="@drawable/messageotpic" />
        <Button
            android:id="@+id/ResendBtn"
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/registerbbg"
            android:textColor="#FFFFFF"
            android:text="Resend OTP">

        </Button>
    </LinearLayout>
</LinearLayout>